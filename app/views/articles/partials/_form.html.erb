<%= form_for @article, html: { 'data-parsley-validate': '' } do |f| %>
  <%= render 'partials/forms/errors', instance: @article %>

  <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Description' %>
    <%= f.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :state, 'State' %>
    <%= f.select :state, options_for_select(Article.states.map { |k, v| [k.humanize, k] }, @article&.state), { include_blank: 'Please select a state' }, class: 'form-control', required: true %>
  </div>

  <div class="btn-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

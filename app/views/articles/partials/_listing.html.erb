<th scope="row"><%= index %></th>
<td><%= article.title %></td>
<td><%= article.description.truncate(20) %></td>
<td><%= article.state %></td>
<td>
  <%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Delete', article_path(article), method: :delete, class: 'btn btn-primary btn-sm', data: { confirm: 'Are you sure?' } %>
</td>
